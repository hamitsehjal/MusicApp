<div class="row">
    <section class="main col-md-9">
        {{#if data.album}}
        <article>
            <h2>{{data.album.Title}}</h2>
            <img src="{{data.album.AlbumCover}}" alt="Album Cover" style="width:100%" />
            <br /><br />
            {{#safeHTML data.album.body}}
            {{/safeHTML}}

            <strong>Artist: </strong> {{data.album.artist}}<br />
            <strong>Label: </strong> {{data.album.Label}}<br />

            <br /><br />
            <strong>Genre: </strong> {{data.album.Genre}}<br />
            <strong>Last Updated: </strong> {{#formatDate data.album.Released}}{{/formatDate}}

        </article>
        {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Album/Genre</p>
        </div>

        {{/if}}

    </section>
    <aside class="col-md-3">
        <br /><br />

        {{#if data.albums}}
        <h4>Albums</h4>

        <ul class="list-group">
            {{#each data.albums}}
            <a href="/music/{{id}}?genre={{../viewingGenre}}" class="list-group-item"> {{Title}}</a>
            {{/each}}
        </ul>
        {{/if}}

        {{#if data.genres}}
        <h4>Genres</h4>

        <ul class="list-group">
            {{#each data.genres}}
            <a href="/music?genre={{id}}" class="list-group-item">{{genre}}</a>
            {{/each}}
        </ul>
        {{/if}}
    </aside>
</div>